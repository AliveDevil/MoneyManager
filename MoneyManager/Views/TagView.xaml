<UserControl x:Class="MoneyManager.Views.TagView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:vm="clr-namespace:MoneyManager.ViewModel"
			 xmlns:validators="clr-namespace:MoneyManager.Model.Validators"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance Type=vm:TagViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Label Content="Tagname"
			   Grid.Row="0"
			   Grid.Column="0" />
		<TextBox Grid.Row="0"
				 Grid.Column="1"
				 Margin="5"
				 VerticalContentAlignment="Center">
			<TextBox.Style>
				<Style TargetType="{x:Type TextBox}">
					<Style.Triggers>
						<Trigger Property="Validation.HasError"
								 Value="True">
							<Setter Property="BorderBrush"
									Value="Red" />
						</Trigger>
					</Style.Triggers>
				</Style>
			</TextBox.Style>
			<TextBox.Text>
				<Binding Path="Key">
					<Binding.ValidationRules>
						<validators:UniqueKeyValidator />
					</Binding.ValidationRules>
				</Binding>
			</TextBox.Text>
		</TextBox>

		<ListView ItemsSource="{Binding Path=Records}"
				  Grid.Row="1"
				  Grid.ColumnSpan="2"
				  HorizontalContentAlignment="Stretch">
			<ListView.ItemTemplate>
				<DataTemplate DataType="vm:RecordViewModel">
					<DockPanel d:DataContext="{d:DesignInstance vm:RecordViewModel}"
							   LastChildFill="True">
						<Label Content="{Binding Path=Timestamp, StringFormat={}{0:d}}"
							   DockPanel.Dock="Left" />
						<Label Content="{Binding Path=Value}"
							   DockPanel.Dock="Right" />
						<Label Content="{Binding Path=Description}" />
					</DockPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</UserControl>
