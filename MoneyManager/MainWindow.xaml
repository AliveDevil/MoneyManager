<Window x:Class="MoneyManager.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Height="350"
		Width="525"
		Title="{Binding Source={StaticResource Resources}, Path=Title}"
		Icon="Bogo-D-Project-Money-Glowing.ico">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Menu Grid.Row="0">
			<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuFile}">
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuSave}" />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuSaveAs}" />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuOpen}" />
				<Separator />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuImport}">
					<MenuItem Header="{Binding Source={StaticResource Resources}, Path=ImportFromOldMM}" />
				</MenuItem>
				<Separator />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuExit}"
						  Click="MenuExit_Click" />
			</MenuItem>
			<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuAbout}"
					  Click="MenuAbout_Click" />
		</Menu>
	</Grid>
</Window>
