<Window x:Class="MoneyManager.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:v="clr-namespace:MoneyManager.Model.Validators"
		Height="350"
		Width="525"
		Title="{Binding Source={StaticResource Resources}, Path=Title}"
		DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
		Icon="Bogo-D-Project-Money-Glowing.ico">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Menu Grid.Row="0"
			  IsTabStop="False">
			<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuFile}">
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuSave}" />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuSaveAs}" />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuOpen}" />
				<Separator />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuImport}">
					<MenuItem Header="{Binding Source={StaticResource Resources}, Path=ImportFromOldMM}" />
				</MenuItem>
				<Separator />
				<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuExit}"
						  Click="MenuExit_Click" />
			</MenuItem>
			<MenuItem Header="{Binding Source={StaticResource Resources}, Path=MenuAbout}"
					  Click="MenuAbout_Click" />
		</Menu>

		<Grid Grid.Row="1"
			  Margin="5">
			<Grid.InputBindings>
				<KeyBinding Key="Enter"
							Command="{Binding Path=ApplyCommand}" />
			</Grid.InputBindings>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto"
								  MinWidth="128" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<DatePicker x:Name="selectedDate"
						Grid.Row="0"
						Grid.Column="0"
						Margin="5"
						IsTodayHighlighted="True"
						TabIndex="0"
						SelectedDate="{Binding Path=Record.Date}" />
			<TextBox x:Name="descriptionText"
					 Grid.Row="0"
					 Grid.Column="1"
					 Margin="5"
					 TabIndex="1"
					 Text="{Binding Path=Record.Description}" />
			<TextBox x:Name="amountInput"
					 Grid.Row="0"
					 Grid.Column="2"
					 Margin="5"
					 TabIndex="2"
					 TextAlignment="Right">
				<TextBox.Text>
					<Binding Path="Record.Amount">
						<Binding.ValidationRules>
							<v:DecimalValidator />
							<ExceptionValidationRule />
						</Binding.ValidationRules>
					</Binding>
				</TextBox.Text>
			</TextBox>
		</Grid>
	</Grid>
</Window>
