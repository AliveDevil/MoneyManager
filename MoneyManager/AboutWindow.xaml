<Window x:Class="MoneyManager.AboutWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="{Binding Source={StaticResource Resources}, Path=AboutTitle}"
		Height="350"
		Width="525"
		WindowStartupLocation="CenterOwner"
		Icon="Bogo-D-Project-Money-Glowing.ico">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label Content="{Binding Source={StaticResource Resources}, Path=Title}"
			   FontSize="24"
			   HorizontalContentAlignment="Center">
			<Label.Effect>
				<DropShadowEffect BlurRadius="10"
								  Direction="0"
								  ShadowDepth="0" />
			</Label.Effect>
		</Label>
		<ScrollViewer Grid.Row="1">
			<TextBlock Text="{Binding Source={StaticResource Resources}, Path=AboutLicense}" TextWrapping="WrapWithOverflow" TextAlignment="Justify" />
		</ScrollViewer>
	</Grid>
</Window>
